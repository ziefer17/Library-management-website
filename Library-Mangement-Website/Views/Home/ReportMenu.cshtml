@{
    Layout = "~/Views/Shared/_LayoutHomeMain.cshtml";
}
<style>
    .ui-autocomplete {
        max-height: 300px;
        overflow-y: auto;
        background-color: #fff;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    .autocomplete-item {
        display: flex;
        padding: 8px;
        border-bottom: 1px solid #eee;
        align-items: center;
    }

        .autocomplete-item img {
            width: 50px;
            height: 65px;
            object-fit: cover;
            margin-right: 10px;
        }

    .autocomplete-details {
        flex: 1;
    }

    .autocomplete-title {
        font-weight: bold;
        color: #007BFF;
    }

    .autocomplete-sub {
        font-size: 12px;
        color: #666;
    }
    .book-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .book-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        background-color: #fff;
        transition: transform 0.2s ease;
    }

        .book-card:hover {
            transform: translateY(-5px);
        }

        .book-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

    .book-card-body {
        padding: 15px;
        display: flex;
        justify-content: center;
        flex-direction: column; 
        align-items: center;
    }

    .book-title {
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 8px;
        color: #007BFF;
        text-align:center;
        border-bottom-style: solid;
    }

    .book-meta {
        font-size: 14px;
        color: #555;
        margin-bottom: 6px;
    }

    .book-info {
        font-size: 13px;
        color: #333;
    }
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main, .content-wrapper {
        flex: 1;
    }

    .pagination-container {
        margin-top: 30px;
        margin-bottom: 30px;
    }

    a.book-card {
        text-decoration: none;
        color: inherit; /* Nếu không muốn đổi màu chữ */
    }

</style>
<main>
    <div class="book-list">
        <div class="book-card">
            <div class="book-card-body">
                <div class="book-title">
                    Sách còn lại
                </div>
                <a href="@Url.Action("RemainingBooks", "Sach")" class="btn btn-primary" style="color: white; text-decoration: none;">Xem báo cáo</a>
            </div>
        </div>
        <div class="book-card">
            <div class="book-card-body">
                <div class="book-title">
                    Sách mượn theo thể loại
                </div>
                <a href="@Url.Action("BorrowedBooksByGenre", "Sach")" class="btn btn-primary" style="color: white; text-decoration: none;">Xem báo cáo</a>
            </div>
        </div>
        <div class="book-card">
            <div class="book-card-body">
                <div class="book-title">
                    Sách trả trễ
                </div>
                <a href="@Url.Action("ReportOvertimeBooks", "PhieuMuons")" class="btn btn-primary" style="color: white; text-decoration: none;">Xem báo cáo</a>
            </div>
        </div>
        <div class="book-card">
            <div class="book-card-body">
                <div class="book-title">
                    Sách thu hồi
                </div>
                <a href="@Url.Action("RemovedBooks", "Sach")" class="btn btn-primary" style="color: white; text-decoration: none;">Xem báo cáo</a>
            </div>
        </div>
        <div class="book-card">
            <div class="book-card-body d-flex justify-content-center">
                <div class="book-title">
                    Sách được trả
                </div>
                <a href="@Url.Action("ReportReturnedBooks", "Sach")" class="btn btn-primary" style="color: white; text-decoration: none;">Xem báo cáo</a>
            </div>
        </div>
    </div>
</main>

