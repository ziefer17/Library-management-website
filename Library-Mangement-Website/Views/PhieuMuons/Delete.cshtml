@model Library_Mangement_Website.PhieuMuon

@{
    ViewBag.Title = "Xoá phiếu mượn";
}

<h2 class="text-danger">Xác nhận xoá phiếu mượn</h2>

<div class="alert alert-warning">
    <strong>Bạn có chắc muốn xoá phiếu mượn sau?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Mã phiếu:</dt>
    <dd class="col-sm-9">@Model.pm_id</dd>

    <dt class="col-sm-3">Độc giả:</dt>
    <dd class="col-sm-9">@Model.TheDocGia.Ten</dd>

    <dt class="col-sm-3">Mã bản sao:</dt>
    <dd class="col-sm-9">@Model.copy_id</dd>

    <dt class="col-sm-3">Ngày mượn:</dt>
    <dd class="col-sm-9">
        @(Model.NgayMuon?.ToString("dd/MM/yyyy") ?? "Không xác định")
    </dd>
</dl>

@using (Html.BeginForm("Delete", "PhieuMuons", new { id = Model.pm_id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Huỷ bỏ</a>
}