@model Library_Mangement_Website.PhieuMuon

@{
    ViewBag.Title = "Sửa phiếu mượn";
}

<h2 class="text-primary">Sửa phiếu mượn</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.pm_id)

    <div class="form-group">
        @Html.LabelFor(model => model.docgia_id, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.docgia_id, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.docgia_id, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.copy_id, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.copy_id, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.copy_id, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NgayMuon, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.NgayMuon, new { htmlAttributes = new { @class = "form-control", type = "date" } })
        @Html.ValidationMessageFor(model => model.NgayMuon, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
