@model Library_Mangement_Website.Models.RegisterViewModel

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_LayoutHomeMain.cshtml";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/books.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="card" style="max-width: 500px; width: 100%;">
        <div class="card-header">
            <h3><i class="fas fa-user-plus"></i> Đăng ký</h3>
        </div>
        <div class="card-content">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger">@ViewBag.Message</div>
            }

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="Email"><i class="fas fa-envelope"></i> Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Password"><i class="fas fa-lock"></i> Mật khẩu</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword"><i class="fas fa-lock"></i> Xác nhận mật khẩu</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-top: 20px;">
                    <button type="submit" class="btn btn-primary" style="width: 100%;">
                        <i class="fas fa-user-plus"></i> Đăng ký
                    </button>
                </div>

                <p style="margin-top: 16px; text-align: center;">
                    Đã có tài khoản?
                    <a href="@Url.Action("Login", "Account")" style="color: #3b82f6;">Đăng nhập</a>
                </p>
            }
            </div>
        </div>
        @Scripts.Render("~/bundles/jqueryval")
</body>
</html>

